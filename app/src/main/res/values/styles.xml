<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#FF26085C</item>
        <!-- Other style attributes -->
    </style>

    <!-- Active text appearance for BottomNavigationView -->
    <style name="BottomNavigationView.ActiveTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item> <!-- Ensure this references your primary color -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Inactive text appearance for BottomNavigationView -->
    <style name="BottomNavigationView.InactiveTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

</resources>
